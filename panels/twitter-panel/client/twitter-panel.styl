/* ==============================================================
   Twitter Panel
   ============================================================== */

@import "nib";


//---------------------------------------------------------------
// Base
//---------------------------------------------------------------


.twitter-panel {
  background-color: #FFE375;
  color: #fff;
}

//
// Sub-Modules
//

.twitter-panel__time-ago {
  font-size: 1.8rem;
  text-shadow: 0 1px 2px rgba(#000, 0.1);
}

.twitter-panel__latest-tweet {
  position: relative;
  margin: 2em 20%;
  width: 60%;
  margin-bottom: 4em;
  padding: 2.4em 2em;
  border-radius: 8px;
  background-color: #fff;
  color: #BAA4DF;
  
  p {
    font-size: 2.0rem;
    line-height: 1.4;
    margin-bottom: 0.5em;
    overflow: hidden;
  }

  span {
    font-size: 1.5rem;
  }

  &:before {
    position: absolute;
    bottom: -30px;
    left: 2em;
    display: block;
    width: 35px;
    height: 35px;
    background: url(../../../images/all_speech-bubble-tail.svg) no-repeat center center;
    content: "";
  }
}
