   ============================================================== */

@import "nib";

//---------------------------------------------------------------
// Base
//---------------------------------------------------------------


// ## Loading Indicator `.loading-indicator`
// Shown when waiting on something

.loading-indicator {
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  width: 18px;
  height: 18px;
  border: solid 2px transparent;
  border-top-color: #fff;
  border-left-color: #fff;
  border-radius: 50%;
  animation(photo-processing-spinner 400ms linear infinite);
}

@keyframes photo-processing-spinner
  0%
    transform(rotate(0deg));
  100%
    transform(rotate(350deg));
