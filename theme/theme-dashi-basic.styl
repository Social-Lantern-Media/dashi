/* ==============================================================
   Theme - Dashi Basic
   ============================================================== */


//---------------------------------------------------------------
// Panel
//---------------------------------------------------------------

.panel {
  text-align: center;
}


//---------------------------------------------------------------
// Typography
//---------------------------------------------------------------

.main-head {
  font-size: 2.4rem;
  margin-bottom: 0.5em;
  text-transform: uppercase;
  letter-spacing: 4px;
  text-shadow: 0 1px 2px rgba(#000, 0.1);
}

.sub-head {
  font-size: 1.8rem;
  text-shadow: 0 1px 2px rgba(#000, 0.1);
}


//---------------------------------------------------------------
// Graphic Content
//---------------------------------------------------------------

.graphic-content {
  margin: 0 auto;
  margin-bottom: 2.5em;
  min-width: 160px;
  min-height: 160px;
}